{
  "name": "centralgauge",
  "version": "0.1.0",
  "description": "CentralGauge - LLM benchmark for Microsoft Dynamics 365 Business Central AL code",
  "license": "MIT",
  "exports": {
    ".": "./cli/centralgauge.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-all cli/centralgauge.ts",
    "start": "deno run --allow-all cli/centralgauge.ts",
    "bench": "deno run --allow-all cli/centralgauge.ts bench",
    "report": "deno run --allow-all cli/centralgauge.ts report",
    "build": "deno compile --allow-all --no-check --output=dist/centralgauge cli/centralgauge.ts",
    "build:strict": "deno compile --allow-all --output=dist/centralgauge cli/centralgauge.ts",
    "build:cross": "deno task build:linux && deno task build:windows && deno task build:macos",
    "build:linux": "deno compile --allow-all --no-check --target=x86_64-unknown-linux-gnu --output=dist/centralgauge-linux cli/centralgauge.ts",
    "build:windows": "deno compile --allow-all --no-check --target=x86_64-pc-windows-msvc --output=dist/centralgauge-windows.exe cli/centralgauge.ts",
    "build:macos": "deno compile --allow-all --no-check --target=x86_64-apple-darwin --output=dist/centralgauge-macos cli/centralgauge.ts",
    "build:macos-arm": "deno compile --allow-all --no-check --target=aarch64-apple-darwin --output=dist/centralgauge-macos-arm cli/centralgauge.ts",
    "build:all": "deno task build && deno task build:linux && deno task build:windows && deno task build:macos && deno task build:macos-arm",
    "test": "deno test --allow-all --coverage=coverage",
    "test:watch": "deno test --allow-all --watch",
    "test:unit": "deno test --allow-all --coverage=coverage tests/unit/",
    "test:status": "bash -c \"deno test --allow-all tests/unit/ 2>&1 | sed 's/\\x1b\\[[0-9;]*m//g' | grep -E '^ok \\||^FAILED \\|'\"",
    "test:integration": "deno test --allow-all --coverage=coverage tests/integration/",
    "test:e2e": "deno test --allow-all --coverage=coverage tests/e2e/",
    "coverage": "deno coverage coverage --lcov --output=coverage/lcov.info && deno coverage coverage",
    "coverage:html": "deno coverage coverage --html",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check cli/centralgauge.ts",
    "deploy": "CLOUDFLARE_ACCOUNT_ID=22c8fbe790464b492d9b178cc0f9255b npx wrangler pages deploy reports-output/ --project-name centralguage --commit-dirty=true"
  },
  "imports": {
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "@std/cli": "jsr:@std/cli@^1.0.27",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/io": "jsr:@std/io@0.225.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/fmt": "jsr:@std/fmt@^1.0.9",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@0.75.0",
    "@anthropic-ai/claude-agent-sdk": "npm:@anthropic-ai/claude-agent-sdk@^0.2.45",
    "@openai/openai": "jsr:@openai/openai@6.22.0",
    "@google/genai": "npm:@google/genai@1.41.0",
    "@openrouter/sdk": "npm:@openrouter/sdk@0.8.0",
    "@db/sqlite": "jsr:@db/sqlite@0.13.0",
    "tui": "https://deno.land/x/tui@2.1.11/mod.ts",
    "tui/components": "https://deno.land/x/tui@2.1.11/src/components/mod.ts",
    "crayon": "https://deno.land/x/crayon@3.3.3/mod.ts",
    "resvg-wasm": "https://deno.land/x/resvg_wasm@0.2.0/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "reports/",
    "node_modules/"
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
